/* pages/myCart/myCart.wxss */
/*设置轮播图的高和宽*/
.banner swiper{
  height: 338rps;
  width: 100%;
}
/*设置图片的高和宽*/
.banner image{
  height: 338rpx;
  width: 100%;
}
/*每日一测*/
.one-day{
  margin: 34rpx 0;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-around;
}
.one-item {
  text-align: center;
  font-size: 28rpx;
  color: #673535;
}

.one-item image{
  width: 350rpx;
  height: 200rpx;
}

/*信息列表*/
.list{
  padding:0 20rpx;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.item{
padding-bottom: 18rpx;
border-bottom: 1rpx solid #eee;
position: relative;
margin-bottom: 20rpx;
}

.item-wrapper{
  display: flex;
}


/*标题格式*/
.title{
  font-size: 30rpx;
  color: #1a1a1a;
  margin-bottom: 18rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.list-wrapper{
  display: flex;
}
.list image{
width: 214rpx;
height: 138rpx;
}

.img image{
  width: 210rpx;
  height: 140rpx;
}

.info{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
 color: #777;
 font-size: 26rpx;
 padding-left: 20rpx;
}

.read-num{
  position: absolute;
  right: 20;
  bottom: 0;
  font-size: 24rpx;
  color: #050505;
  padding-left: 340rpx;
}
.read-num text{
  color: red;
  padding-right: 4rpx;
}
.content{
  display: flex;
}