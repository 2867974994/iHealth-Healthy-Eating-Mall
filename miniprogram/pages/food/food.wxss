/*导入wxss包*/
@import '../../templates/foodList/foodList.wxss';
/*搜索*/
page{
  background: #dbd6d6;
}

.header{
  display: flex;
  padding: 10rpx;
  background: #fff;
}


.inp{
  flex: 1;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding-left: 10rpx;
}
.location{
  width: 100rpx;
  text-align:center;
}

.search{
  background: #f1f1f1;
  color: #acacac;
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 20rpx;

}


/*产品分类*/
.product-type{
  background: #fff;
  padding-top:20rpx;
  display: flex;
  flex-wrap: wrap;
}
.item{
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  color:#666;
}

.item image{
  width: 74rpx;
  height: 74rpx;
}
